<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    tools:layout_width="@dimen/card_layout_width">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/itemIvProfileImageUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/itemTvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemIvProfileImageUrl"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="fefsdfsd"
            android:padding="@dimen/activity_horizontal_padding" />

        <View
            android:id="@+id/vHorizontalLine"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/cardview_dark_background"
            android:layout_below="@id/itemTvText" />

        <TextView
            android:id="@+id/itemTvCreatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vHorizontalLine"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="@dimen/activity_horizontal_padding"
            android:text="fefsdfsd"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/itemIvShared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/vHorizontalLine"
            android:padding="@dimen/share_padding"
            android:src="@android:drawable/ic_menu_share" />
    </RelativeLayout>
</android.support.v7.widget.CardView>